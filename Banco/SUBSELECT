SELECT * FROM CLIENTE WHERE ID = (SELECT MAX(IDCLIENTE) FROM CONTA WHERE SALDO = 4000);

SELECT * FROM CLIENTE WHERE ID = (SELECT MAX(IDCLIENTE) FROM CONTA WHERE SALDO < 4000);

SELECT NOME FROM CLIENTE WHERE ID = (SELECT IDCLIENTE FROM CONTA WHERE SALDO <> 4000);

SELECT NOME FROM CLIENTE WHERE ID = (SELECT IDCLIENTE FROM CONTA WHERE SALDO <> 4000);

SELECT NOME FROM CLIENTE WHERE ID = (SELECT IDCLIENTE FROM CONTA WHERE SALDO = 4000);

SELECT NOME FROM CLIENTE WHERE ID IN (SELECT IDCLIENTE FROM CONTA WHERE SALDO <> 4000);
